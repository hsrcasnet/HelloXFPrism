<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloXFPrism.Views.NewItemPage"
             Title="New Item">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add item" Command="{Binding SaveCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="{Binding Summary}" FontSize="Small" FontAttributes="Italic" BackgroundColor="DarkSlateBlue" TextColor="White"/>

            <Label Text="Text" FontSize="Medium" />
            <Entry Text="{Binding Item.Text}" FontSize="Small" />

            <Label Text="Price" FontSize="Medium" />
            <Entry Text="{Binding Price}" FontSize="Small" Keyboard="Numeric" />

            <Label Text="Description" FontSize="Medium" />
            <Editor Text="{Binding Description}" FontSize="Small" Margin="0" BackgroundColor="LightGray"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
